{
  "compilerOptions": {
    "module": "node16",
    "target": "es2020",
    "moduleResolution": "node16",
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "ts-node": {
    "files": true,
    "swc": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "references": [
    {
      "path": "packages/fasset-indexer-api"
    },
    {
      "path": "packages/fasset-indexer-core"
    },
    {
      "path": "packages/fasset-indexer-xrp",
    },
    {
      "path": "packages/fasset-indexer-doge"
    },
    {
      "path": "packages/fasset-indexer-btc"
    }
  ],
  "exclude": [
    "*/**/playground*.ts"
  ]
}