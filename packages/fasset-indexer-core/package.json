{
    "name": "fasset-indexer-core",
    "version": "0.0.0",
    "description": "FAsset Indexer Core",
    "private": true,
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "default": "./dist/src/index.js"
        }
    },
    "scripts": {
        "build": "rm -rf dist && tsc --build",
        "-------- runners -----------": "---------- runners ----------",
        "run-indexer": "node dist/src/run/run-event-indexer.js",
        "run-watchdog": "node dist/src/run/run-evm-watchdog.js",
        "run-btc-indexer": "node dist/src/run/run-btc-indexer.js",
        "run-btc-watchdog": "node dist/src/run/run-btc-watchdog.js",
        "--------- tests -----------": "----------- tests -----------",
        "test": "yarn mocha test --timeout 100000",
        "test-all": "yarn mocha test test/**/*.test.ts",
        "--------- code generators -----------": "----------- code generators -----------",
        "types": "rm -rf chain/typechain && yarn typechain --target=ethers-v6 chain/artifacts/**/*.json --out-dir chain/typechain/"
    },
    "devDependencies": {
        "@typechain/ethers-v6": "^0.5.1",
        "@types/chai": "^4.3.16",
        "@types/chai-as-promised": "^7.1.8",
        "@types/mocha": "^10.0.6",
        "chai": "^5.1.1",
        "chai-as-promised": "^8.0.0",
        "fs": "^0.0.1-security",
        "mocha": "^10.4.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.15.6",
        "typechain": "^8.3.2"
    },
    "dependencies": {
        "@mikro-orm/cli": "6.3.6",
        "@mikro-orm/core": "^6.3.6",
        "@mikro-orm/knex": "6.3.6",
        "@mikro-orm/mysql": "6.3.6",
        "@mikro-orm/postgresql": "6.3.6",
        "@mikro-orm/sqlite": "6.3.6",
        "chalk": "4.1.2",
        "ethers": "^6.13.0",
        "mikro-orm": "6.3.6"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/database/mikro-orm.config.ts",
            "./dist/database/mikro-orm.config.js"
        ]
    },
    "packageManager": "yarn@3.6.4"
}
