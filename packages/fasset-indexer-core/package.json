{
    "name": "fasset-indexer-core",
    "version": "0.0.0",
    "description": "FAsset Indexer Core",
    "scripts": {
        "build": "tsc build",
        "-------- runners -----------": "---------- runners ----------",
        "run-indexer": "yarn ts-node src/run/run-indexer.ts",
        "run-watchdog": "yarn ts-node src/run/run-watchdog.ts",
        "--------- tests -----------": "----------- tests -----------",
        "test": "yarn mocha test",
        "test-all": "yarn mocha test test/**/*.test.ts",
        "--------- code generators -----------": "----------- code generators -----------",
        "types": "rm -rf chain/typechain && yarn typechain --target=ethers-v6 chain/artifacts/**/*.json --out-dir chain/typechain/"
    },
    "license": "MIT",
    "devDependencies": {
        "@typechain/ethers-v6": "^0.5.1",
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.6",
        "chai": "^5.1.1",
        "fs": "^0.0.1-security",
        "mocha": "^10.4.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.15.6",
        "typechain": "^8.3.2"
    },
    "dependencies": {
        "@mikro-orm/cli": "^6.2.9",
        "@mikro-orm/core": "^6.2.9",
        "@mikro-orm/knex": "^6.2.9",
        "@mikro-orm/mysql": "^6.2.9",
        "@mikro-orm/postgresql": "^6.2.9",
        "@mikro-orm/sqlite": "^6.2.9",
        "ethers": "^6.13.0",
        "mikro-orm": "^6.2.9"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./src/database/mikro-orm.config.ts",
            "./dist/database/mikro-orm.config.js"
        ]
    },
    "packageManager": "yarn@3.6.4"
}
